<Page4>:
    name:"Page4"
    MDNavigationLayout:
        ScreenManager:
            id:cr
            Screen:
                name:"Page3"
                
                FitImage:
                    source:"Cot.jpeg"
                    size_hint:1,1
                
                MDCard:
                    radius:[15]
                    size_hint:.95,.95
                    pos_hint:{"center_x":.5,"center_y":.5}
                    opacity:.7
                
                MDIconButton:
                    icon:"plus"
                    pos_hint:{"center_x":.1,"center_y":.95}
                    on_release:Togle_Page2.set_state("toggle")
                
                MDIconButton:
                    icon:"arrow-left"
                    pos_hint:{"center_x":.05,"center_y":.95}
                    on_release:app.Back_button(self)
                
                MDLabel:
                    text:"[b]Ajout de membre[/b]"
                    markup:True
                    font_style:"H4"
                    font_name:"Font"
                    halign:"center"
                    pos_hint:{"center_y":.8}
                
                MDCard:
                    #elevation:3
                    pos_hint:{"center_x":.5,"center_y":.35}
                    size_hint:.6,.4
                    opacity:1
                    MDBoxLayout:
                        orientation: 'vertical'
                        spacing:10
                        adaptive_height:True
                        pos_hint:{"center_x":.5,"center_y":.5}
                        MDTextField:
                            id:Mise_page4
                            hint_text:"La mise"
                            mode:"fill"
                            halign:"center"
                            input_filter:"int"
                        MDTextField:
                            id:Name_page4
                            hint_text:"Nom & premon"
                            mode:"fill"
                            halign:"center"
                        
                        
                        MDRaisedButton:
                            text:"[b]Envoyer[/b]"
                            size_hint_x:.25
                            pos_hint:{"center_x":.5}
                            on_release:app.New_member(self,Mise_page4,Name_page4)

        # Navigation Drawer Panel
        MDNavigationDrawer:
            # Add Navigation Drawer Panel Content here.
            id:Togle_Page2
            size_hint_x:.3

            MDBoxLayout:
                orientation: 'vertical'
                Image:
                    source:"Icon.png"
                    size:[.1,.1]
                    pos_hint:{"center_x":.5}

                MDLabel:
                    text:"[b][color=ff0000]CAF,[/color] Pour les Fid√®les de AD[/b]"
                    markup:True
                    font_name:"Font.ttf"
                    height:self.texture_size[1]
                    halign:"center"

                MDScrollView:
                    MDList:
                        OneLineIconListItem:
                            text:"[b]Night|Light[/b]"
                            on_release:app.change_theme(self)
                            IconLeftWidget:
                                icon:"theme-light-dark"
                        
                        OneLineIconListItem:
                            text:"[b]New Color[/b]"
                            on_release:app.change_color(self)

                            IconLeftWidget:
                                icon:"palette"
                        
                        OneLineIconListItem:
                            text:"[b]Menu[/b]"
                            on_release:app.Menu_1(self)

                            IconLeftWidget:
                                icon:"menu"

                        OneLineIconListItem:
                            text:"[b]Leave[/b]"
                            theme_text_color:"Error"
                            on_release:app.Close(self)

                            IconLeftWidget:
                                icon:"close"


            